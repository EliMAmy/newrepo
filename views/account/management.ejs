<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<h2>Welcome <%= accountData.account_firstname %></h2>
<p>"You're logged in".</p>

<a href="/account/update/<%= accountData.account_id %>" 
   title="Update Account Information">
   Update Account Information
</a>

<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <a href="/inv" title="Manage Inventory">Manage Inventory</a>
<% } %>


<h2>My Reviews</h2>

<% if (reviews && reviews.rows && reviews.rows.length > 0) { %>
  <ol class="account-review-list">
    <% reviews.rows.forEach(review => { %>
      <li>
        Reviewed the 
        <%= review.inv_year %> 
        <%= review.inv_make %> 
        <%= review.inv_model %>
        on 
        <%= new Date(review.review_date).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric"
            }) %>
        |
        <a href="/review/edit/<%= review.review_id %>">Edit</a>
        |
        <a href="/review/delete/<%= review.review_id %>">Delete</a>
      </li>
    <% }) %>
  </ol>
<% } else { %>
  <p>You have not written any reviews yet.</p>
<% } %>