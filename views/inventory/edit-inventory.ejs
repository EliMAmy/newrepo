
<h1><%= title %></h1>
<%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
  <% } %>
<div id="edit-inventory">

  <form action="/inv/update" method="post">
    <label for="classificationList">Classification</label><br><br>
      <%- classificationList %><br><br>

    <label for="inv_make">Make</label><br>
    <input type="text" id="inv_make" name="inv_make"  placeholder="Min of 3 characters" minlength="3" required <% if(locals.inv_make) { %> value="<%- locals.inv_make %>"
    <% } %>> <br>

    <label for="inv_model">Model</label><br>
    <input type="text" id="inv_model" name="inv_model" placeholder="Min of 3 characters" minlength="3" required <% if(locals.inv_model) { %> value="<%-locals.inv_model %>"
    <% } %> ><br>
    
    <label for="inv_description">Description</label><br><br>
    <textarea id="inv_description" name="inv_description" required><%= locals.inv_description || "" %></textarea><br>

    <label for="inv_image">Image Path</label><br>
    <input type="text" id="inv_image" name="inv_image" <% if(locals.inv_image) { %> value="<%- locals.inv_image %>"
    <% } %>><br>

    <label for="inv_thumbnail">Thumbnail Path</label><br>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" <% if(locals.inv_thumbnail) { %> value="<%- locals.inv_thumbnail %>"
    <% } %> ><br>

    <label for="inv_price">Price</label><br>
    <input type="number" id="inv_price" name="inv_price" <% if(locals.inv_price) { %> value="<%- locals.inv_price %>"
    <% } %> required placeholder="decimal or integer" min="0" step="0.01"><br>

    <label for="inv_year">Year</label><br>
    <input type="number" id="inv_year" name="inv_year" <% if(locals.inv_year) { %> value="<%- locals.inv_year %>"
    <% } %> required  placeholder="4-digit year" min="1900" max="2099" title="Enter a valid 4-digit year"><br>

    <label for="inv_miles">Miles</label><br>
    <input type="number" id="inv_miles" name="inv_miles" <% if(locals.inv_miles) { %> value="<%- locals.inv_miles %>"
    <% } %> required placeholder="digits only"  min="0"
    step="1"><br>

    <label for="inv_color">Color</label><br>
    <input type="text" id="inv_color" name="inv_color" <% if(locals.inv_color) { %> value="<%- locals.inv_color %>"
    <% } %> required ><br>

    <button type="submit">Update Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</div>